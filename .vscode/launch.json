// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "States Example (Langium)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/examples/workspace",
                "--extensionDevelopmentPath=${workspaceFolder}/examples/states-langium/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/examples/states-langium/extension/pack/*.js",
                "${workspaceFolder}/sprotty-vscode-extension/lib/**/*.js"
            ],
            "sourceMaps": true
        },
        {
            "name": "States Example (Xtext)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceFolder}/examples/workspace",
                "--extensionDevelopmentPath=${workspaceFolder}/examples/states-xtext/extension"
            ],
            "outFiles": [
                "${workspaceFolder}/examples/states-xtext/extension/pack/*.js",
                "${workspaceFolder}/sprotty-vscode-extension/lib/**/*.js"
            ],
            "sourceMaps": true
        }
    ]
}