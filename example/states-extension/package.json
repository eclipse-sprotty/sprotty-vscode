{
    "name": "states-extension",
    "displayName": "States Example",
    "description": "An example Xtext-based DSL with Sprotty diagrams for statemachines",
    "publisher": "TypeFox",
    "repository": {
        "type": "git",
        "url": "https://github.com/TypeFox/sprotty-vscode"
    },
    "version": "0.0.10",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "states",
                "aliases": [
                    "states",
                    "sm"
                ],
                "extensions": [
                    ".sm"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "states",
                "scopeName": "source.sm",
                "path": "./syntaxes/states.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "states.diagram.open",
                "title": "Open in diagram",
                "category": "States Diagram"
            },
            {
                "command": "states.diagram.fit",
                "title": "Fit to Screen",
                "category": "States Diagram"
            },
            {
                "command": "states.diagram.center",
                "title": "Center selection",
                "category": "States Diagram"
            },
            {
                "command": "states.diagram.export",
                "title": "Export diagram to SVG",
                "category": "States Diagram"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId==states",
                    "command": "states.diagram.open",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname == '.sm'",
                    "command": "states.diagram.open",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "states.diagram.fit"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "states.diagram.center"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "states.diagram.export"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:states",
        "onCommand:states.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./extension/pack/states-extension",
    "dependencies": {
        "vscode-languageclient": "^5.2.1",
        "path": "^0.12.7",
        "vscode-languageserver": "^5.2.1",
        "sprotty-vscode": "0.0.20"
    },
    "devDependencies": {
        "vscode": "^1.1.21",
        "@types/node": "^8.0.0",
        "tslint": "^5.11.0",
        "typescript": "^3.1.3",
        "rimraf": "^2.6.3",
        "webpack": "^4.28.1",
        "webpack-cli": "^3.2.1",
        "ts-loader": "^6.2.1"
    },
    "scripts": {
        "clean": "rimraf lib",
        "watch": "tsc -w",
        "prepare": "node ./node_modules/vscode/bin/install && yarn unzip-ls && yarn build",
        "unzip-ls": "unzip  -o ./states-language-server.zip -d server/",
        "build": "tsc && webpack --mode=development",
        "vscode:prepublish": "webpack --mode=production"
    }
}
